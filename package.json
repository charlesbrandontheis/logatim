{
  "name": "logatim-web",
  "version": "1.0.0",
  "description": "Logatim website",
  "main": "index.js",
  "scripts": {
    "postinstall": "mkdirp public/css public/js/ie",
    "start": "npm run watch & npm run cp & http-server -c-1 public",
    "watch": "npm run watch:html & npm run watch:css & npm run watch:js & npm run watch:images",
    "build": "npm run html & npm run js & npm run css & npm run images & npm run cp",
    "html": "html-minifier -c html.config.json index.html > public/index.html",
    "js": "webpack -p",
    "images": "imagemin images/* public/images",
    "css": "npm run css:main && npm run css:ie8 && npm run css:ie9",
    "cp": "copyfiles -R assets/asciinema public/asciinema & copyfiles assets/js/ie/* public/js/ie/",
    "css:main": "node-sass assets/sass/main.scss | csso > public/css/bundle.css",
    "css:ie8": "node-sass assets/sass/ie8.scss | csso > public/css/ie8.css",
    "css:ie9": "node-sass assets/sass/ie9.scss | csso > public/css/ie9.css",
    "watch:html": "nodemon -e html -i public -x 'npm run html'",
    "watch:js": "nodemon -w assets/js/ -x 'npm run js'",
    "watch:images": "nodemon -w images -x 'npm run images'",
    "watch:css": "nodemon -e scss -x 'npm run css'",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -w -s",
    "predeploy": "npm run build",
    "deploy": "git push origin `git subtree split --prefix public gh-pages-develop`:gh-pages --force"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edravis/logatim.git"
  },
  "author": "Ruben Sospedra",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/edravis/logatim/issues"
  },
  "homepage": "https://github.com/edravis/logatim#readme",
  "dependencies": {
    "jquery": "^2.2.0",
    "jquery-ui": "^1.10.5",
    "logatim": "^0.4.4"
  },
  "devDependencies": {
    "conventional-changelog-cli": "^1.1.1",
    "copyfiles": "^0.2.1",
    "csso": "^1.5.4",
    "html-minifier": "^1.1.1",
    "imagemin-cli": "^2.1.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.4.2",
    "webpack": "^1.12.13"
  }
}
